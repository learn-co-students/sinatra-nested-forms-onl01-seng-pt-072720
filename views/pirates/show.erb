<h1>Your pirate is:</h1>


<div class="pirate">
    <h2>Name: <%=@pirate.name%><h2>
    <h2>Weight: <%=@pirate.weight%><h2>
    <h2>Height: <%=@pirate.height%><h2>
</div><br>


<h1>Here are the his/her ships</h1>


    <% @ships.each.with_index do |ship, i| %>
        <div class="ship">
        <% if i == 0 %>
            <p> Name: <%= ship.name%></p><br>
            <p> Type: <%= ship.type%></p><br>
            <p> Booty: <%= ship.booty%></p><br>
        </div><br>
        <% end %>
    <% end %>


    <% @ships.each.with_index do |ship, i| %>
    <div class="ship">
    <% if i == 1 %>
        <p> Name: <%= ship.name%></p><br>
        <p> Type: <%= ship.type%></p><br>
        <p> Booty: <%= ship.booty%></p><br>
    </div><br>
    <% end %>
<% end %>

